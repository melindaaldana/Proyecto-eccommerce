<!DOCTYPE html>
<html lang="en">

    <%- include ("./partials/head") -%>

<body>
    <%- include ("./partials/header") -%>

    <section>
        <div class="form_container" >
            <div class="form">
                <div class="form_header">
                    <h1>Libro a editar: <%= libro.titulo %></h1>

                </div>
                <form class="create_form" action="/libros/update/<%= libro.id %>" method="POST">
                    <div class="form_item">
                        <label for="titulo">Título</label>
                        <input type="text" name="titulo" id="titulo" placeholder="Ingresar título" required>
                    </div>
                    <div class="form_item">
                        <label for="autor">Autor</label>
                        <input type="text" name="autor" id="autor" placeholder="Ingresar nombre del autor" required>
                    </div>
                    <div class="form_item">
                        <label for="editorial">Editorial</label>
                        <input type="text" name="editorial" id="editorial" placeholder="Ingresar nombre de la editorial" required>
                    </div>

                    <div class="form_item">
                        <label for="generoID">Género</label>
                        <select name="id_genero" id="" required>
                            <option value="" disable selected>Seleccione el Género</option>
                            <% allGeneros.forEach(genero => { %>
                                <option value="<%= genero.id %>"><%= genero.nombre %></option>
                            <% }) %>
                        </select>
                        
                    </div>
                    <div class="form_item">
                        <label for="precio">Precio</label>
                        <input type="number" name="precio" id="precio" placeholder="Ingresar precio" required>
                    </div>
                    <div class="form_item">
                        <label for="paginas">Páginas</label>
                        <input type="number" name="paginas" id="paginas" placeholder="Ingresar número de páginas" required>
                    </div>
                    <div class="form_item">
                        <label for="stock">Stock</label>
                        <input type="number" name="stock" id="stock" placeholder="Ingresar cantidad" required>
                    </div>
                    <div class="form_item">
                        <label for="imagen">Imagen</label>
                        <input type="file" name="imagen" id="imagen">
                    </div>
                    <div class="form_item">
                        <input type="submit" value="Guardar Producto">
                    </div>
                </form>
            </div>
        </div>
    </section>

    <%- include ("./partials/footer") -%>
    
</body>
</html>